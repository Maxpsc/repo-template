		"eslint-plugin-react-hooks": "^4.6.0",
		"father": "^4.1.3",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.2",
		"rollup": "^3.9.1",
		"rollup-plugin-typescript2": "^0.34.1",
