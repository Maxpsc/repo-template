		"test:cov": "jest --runInBand --coverage",
		"release": "",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "",
	"main": "es/index.js",
	"module": "es/index.js",
	"typings": "es/index.d.ts",
	"types": "",
	"files": [
		"es",
		"lib",
		"dist"
	],
	"license": "MIT",
	"lint-staged": {
		"*.{css,less,md,json}": [
			"prettier --write"
		],
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"devDependencies": {
